---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import projects from '../data/projects';
---

<BaseLayout title="Projects | N2 Solutions" description="Open source tools, homelab builds, cloud-native experiments, and infrastructure as code. All code lives on GitHub.">
  <div class="mx-auto max-w-5xl px-6 py-20">
    <p class="mb-4 text-sm font-medium uppercase tracking-widest text-accent">
      Projects
    </p>
    <h1 class="mb-6">What I&apos;m Building</h1>
    <p class="mb-16 max-w-3xl text-lg leading-relaxed text-text-muted">
      Open source tools, homelab builds, cloud-native experiments, and Raspberry
      Pi projects. All code lives on
      <a href="https://github.com/n2solutionsio">GitHub</a>.
    </p>

    <div class="grid gap-6 sm:grid-cols-2">
      {projects.map((project) => <ProjectCard project={project} />)}
    </div>
  </div>
</BaseLayout>
